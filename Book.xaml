<UserControl x:Class="Book_Store.Book"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Book_Store"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
            <Image x:Name="BookImage" Width="100" Height="150" />
        <TextBlock x:Name="BookTitle" Text="" VerticalAlignment="Center" FontSize="15" Margin="30 0 0 0" />
        <TextBlock x:Name="BookDescription" Text="{Binding Description}" />
        <TextBlock x:Name="BookStyle" Text="{Binding Style}"/>
        <TextBlock x:Name="NAuthor" Text="{Binding NameAuthor}"/>
        <TextBlock x:Name="SAuthor" Text="{Binding SurnameAuthor}"/>
        <TextBlock x:Name="BookPrice" Text="{Binding Price}"/>
    </StackPanel>
</UserControl>
